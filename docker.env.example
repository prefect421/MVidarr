# MVidarr Docker Environment Configuration
# Copy this file to docker.env and modify as needed

# Enhanced Scheduler Configuration
MVIDARR_USE_ENHANCED_SCHEDULER=true
MVIDARR_AUTO_DOWNLOAD_ENABLED=true
MVIDARR_AUTO_DOWNLOAD_SCHEDULE=daily
MVIDARR_AUTO_DOWNLOAD_TIME=03:30
MVIDARR_AUTO_DISCOVERY_ENABLED=false
MVIDARR_AUTO_DISCOVERY_SCHEDULE=daily
MVIDARR_AUTO_DISCOVERY_TIME=06:00
MVIDARR_MAX_DOWNLOADS_PER_RUN=10
MVIDARR_SCHEDULER_HEALTH_CHECK=true
MVIDARR_SCHEDULER_LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:///data/mvidarr.db

# Security Configuration
MVIDARR_SECRET_KEY=your-very-secure-secret-key-here

# Application Configuration
FLASK_ENV=production
PORT=5000

# Authentication (for simple auth mode)
REQUIRE_AUTHENTICATION=false