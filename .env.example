# MVidarr Enhanced Configuration Template
# Copy this file to .env and modify the values for your environment

# Database configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=mvidarr
DB_USER=mvidarr
DB_PASSWORD=your_secure_database_password_here

# Application settings
PORT=5000
DEBUG=false
SECRET_KEY=generate_a_random_secure_secret_key_here

# External services (optional)
IMVDB_API_KEY=your_imvdb_api_key_here
YOUTUBE_API_KEY=your_youtube_api_key_here

# MeTube configuration (if using external MeTube)
METUBE_HOST=localhost
METUBE_PORT=8081

# Spotify integration (optional)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Plex integration (optional)
PLEX_SERVER_URL=http://localhost:32400
PLEX_TOKEN=your_plex_token_here

# SSL/TLS settings
SSL_REQUIRED=false

# Logging
LOG_LEVEL=INFO
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Database connection pooling
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30