# MVidarr Enhanced - Production Environment Configuration
# Copy this file to .env.production and update the values

# ===========================================
# Application Configuration
# ===========================================

# Secret key for Flask sessions (REQUIRED - Generate a secure random string)
SECRET_KEY=change-this-to-a-secure-random-string

# Application port
PORT=5000

# ===========================================
# Database Configuration
# ===========================================

# Database passwords (REQUIRED - Change these!)
MYSQL_ROOT_PASSWORD=secure-root-password
DB_PASSWORD=secure-db-password

# Database connection details
DB_HOST=mariadb
DB_PORT=3306
DB_USER=mvidarr
DB_NAME=mvidarr_enhanced

# ===========================================
# External API Keys (Optional but recommended)
# ===========================================

# IMVDb API key for enhanced metadata
IMVDB_API_KEY=your-imvdb-api-key

# YouTube API key for video discovery
YOUTUBE_API_KEY=your-youtube-api-key

# ===========================================
# Volume Mappings
# ===========================================

# Path where music videos will be stored (absolute path recommended)
MUSIC_VIDEOS_PATH=./musicvideos

# Path where database files will be stored (absolute path recommended)
DATABASE_FOLDER=./database

# ===========================================
# Network Configuration
# ===========================================

# HTTP and HTTPS ports for nginx
HTTP_PORT=80
HTTPS_PORT=443

# ===========================================
# Backup Configuration
# ===========================================

# Path for database backups
BACKUP_PATH=./backups

# ===========================================
# Advanced Configuration
# ===========================================

# Enable debug mode (set to false for production)
DEBUG=false

# Node environment
NODE_ENV=production

# ===========================================
# SSL/TLS Configuration
# ===========================================

# Set to true to enable SSL/TLS
ENABLE_SSL=false

# SSL certificate paths (if using custom certificates)
SSL_CERT_PATH=./docker/nginx/ssl/cert.pem
SSL_KEY_PATH=./docker/nginx/ssl/key.pem

# ===========================================
# Performance Tuning
# ===========================================

# MariaDB memory settings
MYSQL_INNODB_BUFFER_POOL_SIZE=256M
MYSQL_MAX_CONNECTIONS=200

# ===========================================
# Monitoring & Logging
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable application metrics
ENABLE_METRICS=true

# ===========================================
# Example Values (DO NOT USE IN PRODUCTION)
# ===========================================

# SECRET_KEY=mvidarr-production-secret-key-change-this-immediately
# MYSQL_ROOT_PASSWORD=very-secure-root-password-123
# DB_PASSWORD=very-secure-db-password-456
# IMVDB_API_KEY=your-actual-imvdb-api-key-here
# YOUTUBE_API_KEY=your-actual-youtube-api-key-here